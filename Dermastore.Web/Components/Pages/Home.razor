@page "/"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div style="position: relative; width: 100%; height: 0; padding-top: 56.2225%;
 padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden;
 border-radius: 8px; will-change: transform;">
    <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
            src="https://www.canva.com/design/DAGh01QkYYc/AOp8FklOD4tLbqz5e6vCXQ/view?embed" allowfullscreen="allowfullscreen" allow="fullscreen">
    </iframe>

    <!-- Transparent overlay to capture the click -->
    <div @onclick="() => NavigateToProducts()" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; cursor: pointer; background: rgba(0, 0, 0, 0);">
    </div>
</div>

<div style="position: relative; width: 100%; height: 0; padding-top: 56.2225%;
 padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden;
 border-radius: 8px; will-change: transform;">
    <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
            src="https://www.canva.com/design/DAGh1DeAkgI/fEhD7N6jVYnWQTHEZDzwsg/view?embed" allowfullscreen="allowfullscreen" allow="fullscreen">
    </iframe>

    <!-- Transparent overlay to capture the click -->
    <div @onclick="() => NavigateToProductDetails(1)" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; cursor: pointer; background: rgba(0, 0, 0, 0);">
    </div>
</div>

@code {
    public void NavigateToProducts()
    {
        Navigation.NavigateTo("/products");
    }

    public void NavigateToProductDetails(int id)
    {
        Navigation.NavigateTo("/products/details/" + id);
    }
}
