@page "/orders/confirm"
@using MediatR
@using Dermastore.Application.Commands.Vnpays
@inject IMediator Mediator
@inject NavigationManager NavigationManager

<h3>Thanh toán đơn hàng @orderId</h3>

@if (string.IsNullOrEmpty(PaymentUrl))
{
    <p>Đang tạo link thanh toán...</p>
}
else
{
    <p>Nhấn vào <a href="@PaymentUrl" target="_blank">link này</a> để thanh toán.</p>
}

@code {
    [Parameter]
    public string PaymentUrl { get; set; }

    [SupplyParameterFromQuery]
    public int orderId { get; set; }

    // Create link to VNpay
    protected override async Task OnInitializedAsync()
    {
        if (orderId <= 0)
        {
            // Handle invalid order ID
            NavigationManager.NavigateTo("/orders"); //or show an error page
            return;
        }

        try
        {
            PaymentUrl = await Mediator.Send(new CreatePaymentUrlCommand(orderId));
        }
        catch (Exception ex)
        {
            // Log the error
            Console.WriteLine($"Payment URL creation failed: {ex.Message}");
            // Optionally redirect or show an error message
            NavigationManager.NavigateTo("/orders/error");
        }
    }
    
