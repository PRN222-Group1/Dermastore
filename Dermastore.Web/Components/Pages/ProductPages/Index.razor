@page "/products"
@using Dermastore.Application.DTOs
@using Dermastore.Application.Queries.Products
@using Dermastore.Domain.Entities
@using Dermastore.Domain.Enums
@using MediatR
@inject IMediator Mediator

<PageTitle>Product List</PageTitle>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Product List</h2>
        <a href="products/create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Create New</a>
    </div>

    @if (products != null && products.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>
                                @product.Status
                            </td>
                            <td>@product.Quantity</td>
                            <td>
                                <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>@product.Category</td>
                            <td>
                                <a href="@($"products/edit?id={product.Id}")" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a href="@($"products/details?id={product.Id}")" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                                <a href="@($"products/delete?id={product.Id}")" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <p>No products available.</p>
        </div>
    }
</div>

@code {
    private IReadOnlyList<ProductDto> products;

    protected override async Task OnInitializedAsync()
    {
        var query = new GetProductsQuery();
        products = await Mediator.Send(query);
    }
}
