@using Dermastore.Application.DTOs
@inject NavigationManager NavigationManager

<div class="card h-100 shadow-sm product-card" style="border-radius: 12px; transition: transform 0.3s ease, box-shadow 0.3s ease; width: 300px;">
    <div class="product-image-container pt-3" style="height: 180px; overflow: hidden; display: flex; align-items: center; justify-content: center; border-radius: 12px 12px 0 0; cursor: pointer;"
    @onclick="(() => NavigateToDetails())"
    >
        <img src="@Product.ImageUrl"
        class="card-img-top"
        alt="@Product.Name"
        style="height: 100%; object-fit: contain; transition: transform 0.3s ease;">
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-auto text-truncate">@Product.Name</h5>
        <p class="card-text text-primary fw-bold">@string.Format("{0}đ", Product.Price.ToString("N0"))</p>
    </div>
</div>

@code {
    [Parameter]
    public ProductDto Product { get; set; }

    private void NavigateToDetails() {
        NavigationManager.NavigateTo("/products/details/" + Product.Id);
    }
}
